@model HabitsTracker.ViewModels.RegisterViewModel

<div class="min-h-screen bg-[#303030] flex items-center justify-center">
    <div class="max-w-md w-full bg-[#404040] rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-center mb-6 text-white">Register</h2>
        <form asp-action="Register" method="post">
            <div class="mb-4">
                <label asp-for="Username" class="block text-white text-sm font-bold mb-2">Username</label>
                <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 bg-[#505050] leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Username" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="block text-white text-sm font-bold mb-2">Password</label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 bg-[#505050] leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-white text-sm font-bold mb-2">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 bg-[#505050] leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Register
                </button>
                <a asp-action="SignIn" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Already have an account?
                </a>
            </div>
        </form>
    </div>
</div>